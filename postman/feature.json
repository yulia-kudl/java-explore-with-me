					"name": "Add comment",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const main = async () => {\r",
									"    const api = new API(pm); // Ваш API-класс для обёртки запросов\r",
									"    const rnd = new RandomUtils(); // Ваш генератор случайных данных\r",
									"\r",
									"    try {\r",
									"        // Создаем пользователя и категорию\r",
									"        const user = await api.addUser(rnd.getUser());\r",
									"        const category = await api.addCategory(rnd.getCategory());\r",
									"\r",
									"        // Создаем событие\r",
									"        let event = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
									"\r",
									"        // Публикуем событие (PATCH /admin/events/{eventId} с body { stateAction: \"PUBLISH_EVENT\" })\r",
									"        event = await api.publishEvent(event.id);\r",
									"\r",
									"        // Сохраняем данные для запроса комментария\r",
									"        pm.collectionVariables.set(\"uid\", user.id);\r",
									"        pm.collectionVariables.set(\"eid\", event.id);\r",
									"\r",
									"        // Генерируем уникальный текст комментария\r",
									"        const commentText = \"COMMENT_\" + Date.now() + \"_\" + Math.floor(Math.random() * 1000);\r",
									"\r",
									"        // Обновляем тело запроса для добавления комментария\r",
									"        pm.request.body.update({\r",
									"            mode: 'raw',\r",
									"            raw: JSON.stringify({ text: commentText }),\r",
									"            options: { raw: { language: 'json' } }\r",
									"        });\r",
									"\r",
									"        const comment = await api.addComment(user.id, event.id, { text: commentText });\r",
									"        pm.collectionVariables.set(\"commentId\", comment.id);\r",
									"\r",
									"    } catch (err) {\r",
									"        console.error(\"Ошибка при подготовке тестовых данных:\", err);\r",
									"    }\r",
									"};\r",
									"\r",
									"// Запускаем\r",
									"const interval = setInterval(() => {}, 1000);\r",
									"setTimeout(async () => {\r",
									"    try {\r",
									"        await main();\r",
									"    } catch (e) {\r",
									"        console.error(e);\r",
									"    } finally {\r",
									"        clearInterval(interval);\r",
									"    }\r",
									"}, 100);\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Проверка, что статус ответа 201 Created\r",
									"pm.test(\"Ответ должен содержать код статуса 201 и быть JSON\", function () {\r",
									"    pm.response.to.have.status(201);\r",
									"    pm.response.to.be.withBody;\r",
									"    pm.response.to.be.json;\r",
									"});\r",
									"\r",
									"// Получаем тело ответа\r",
									"const response = pm.response.json();\r",
									"\r",
									"// Проверка структуры комментария\r",
									"pm.test(\"Комментарий должен содержать поля id, text, author, event, createdOn, status\", function () {\r",
